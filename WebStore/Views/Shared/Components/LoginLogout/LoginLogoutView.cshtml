<div class="shop-menu pull-right">
    <div class="btn-toolbar pull-right">
        <span href="#" class="btn btn-default"><i class="fa fa-user"></i> Здравствуйте, @User.Identity.Name !</span>
        @if (User.IsInRole("Admin"))
        {
            <a href="#" class="btn btn-default"><i class="fa fa-key"></i> Админка</a>
        }
        <a href="#" class="btn btn-default"><i class="fa fa-star"></i> Список желаний</a>
        <a asp-controller="Home" asp-action="CheckOut" class="btn btn-default"><i class="fa fa-crosshairs"></i> Заказы</a>
        <a asp-controller="Home" asp-action="Cart" class="btn btn-default"><i class="fa fa-shopping-cart"></i> Корзина</a>
        <form asp-controller="Account" asp-action="Logout" asp-antiforgery="true" method="post" class="btn">
            <button type="submit" class="btn btn-danger"><i class="fa fa-sign-out-alt"></i> Выход</button>
        </form>
    </div>
</div>