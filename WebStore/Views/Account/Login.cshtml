@model WebStore.Models.Account.LoginViewModel

@{
    Layout = "_LayoutBase";
    ViewData["Title"] = "Вход";
}


<section id="form">
    <!--form-->
    <div class="row">
        <div class="col-sm-4 col-sm-offset-1">
            <div class="login-form">
                <!--login form-->
                <h2>Войти в свой аккаунт</h2>
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <label asp-for="UserName" class="sr-only"></label>
                    <input asp-for="UserName" placeholder="@nameof(Model.UserName)" />
                    
                    <label asp-for="Password" class="sr-only"></label>
                    <input asp-for="Password" placeholder="@nameof(Model.Password)" />
                    
                    @Html.HiddenFor(Model => Model.ReturnUrl)
                    <span>
                        <input asp-for="RememberMe" class="checkbox">
                        Запомнить меня
                    </span>
                    <button type="submit" class="btn btn-default">Войти</button>
                </form>
            </div><!--/login form-->
        </div>
    </div>
</section><!--/form-->
