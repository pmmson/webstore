@model  IEnumerable<WebStore.Models.EmployeeView>
@{
    ViewBag.Title = "Сотрудники";
}

<h3>@ViewBag.Title</h3>

@if (User.IsInRole("Administrator"))
{
    <hr />
        <a asp-action="Edit" class="btn btn-success">Добавить</a>
    <hr />
}

<table class="table">
    <thead>
        <tr>
            <th>Фамилия</th>
            <th>Имя</th>
            <th>Отчество</th>
            <th>Возраст</th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        <td>@Html.ActionLink(@item.SurName, "Details", new { id = item.Id })</td>
        <td>@item.FirstName</td>
        <td>@item.Patronymic</td>
        <td>@item.Age</td>
        <td>
            @if (User.IsInRole("Administrator"))
            { 
                <a asp-action="Edit" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash text-danger"></i></a>
            }
        </td>
    </tr>
    }
</table>